<div class="field">
  <strong>Descrição:</strong><br>
  <%= form.text_field :descricao, size: 50 %>
</div>

<div class="field">
  <strong>Login:</strong><br>
  <%= form.text_field :login, size: 50 %>
</div>

<div class="field">
  <strong>Senha:</strong><br>
  <%= form.text_field :senha, size: 50 %>
</div>

<div class="field">
  <strong>Observação:</strong><br>
  <%= form.text_area :observacao, cols: 50, rows: 4 %>
</div>

<div class="field">
  <strong>Icone:</strong><br>
  <%= form.file_field :imagem %>
</div>
<br><br>
<div class="actions">
  <input type="submit" class="btn btn-success" value="SALVAR" />
</div>
<% end %>